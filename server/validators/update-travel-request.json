{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "updateTravel",
  "type": "object",
  "properties": {
    "travelId": {
      "type": "string",
      "description": "Id of the travel"
    },
    "published": {
      "type": "boolean",
      "description": "If true publish the travel while false remove it from publication"
    },
    "imageUrl": {
      "type": "string",
      "description": "Url to view image"
    },
    "name": {
      "type": "string",
      "description": "The simple name of the travel",
      "minLength":10,
      "maxLength":30
    },
    "description": {
      "type": "string",
      "description": "The extended description of the travel",
      "minLength":200,
      "maxLength":4096
    },
    "startDate": {
      "type": "string",
      "description": "The start date of the travel",
      "minLength":10,
      "maxLength":10,
      "pattern": "[1-2][0-9]{3}-[0-9]{2}-[0-9]{2}"
    },
    "endDate": {
      "type": "string",
      "description": "The end date of the travel",
      "minLength":10,
      "maxLength":10,
      "pattern": "[1-2][0-9]{3}-[0-9]{2}-[0-9]{2}"
    }
  },
  "required": [
    "name",
    "description",
    "startDate",
    "endDate"
  ],
  "additionalProperties": false
}
